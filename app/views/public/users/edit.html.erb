<div class="d-flex justify-content-center">
  <div class="card shadow-sm" style="width: 40rem;">
    <h1 class="text-center mt-3">プロフィール更新</h1>

    <div class="card-body">
      <%= form_with(model: @user, url: users_path(@user), local: true, html: { class: "profile-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像", class: "form-label" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file", id: "profile-image-upload" %>
          <img id="profile-image-preview" class="mt-3" />
        </div>
        <div class="form-group">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <%= f.submit "更新", class: "btn btn-primary mt-3 mb-3" %>
      <% end %>
    </div>
  </div>
</div>
