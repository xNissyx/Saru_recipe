<%= form_with(model: recipe, local: true) do |f| %>

  <div class="mb-3">
    <%= f.label :image, class: 'form-label' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', placeholder: "レシピ名" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', placeholder: "レシピの説明" %>
  </div>

  <div class="mb-3">
    <%= f.label :calorie, class: 'form-label' %>
    <%= f.number_field :calorie, class: 'form-control' %>
  </div>
  
  <div id="ingredients">
    <%= f.fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', f: ingredient %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add ingredient', f, :ingredients %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :tag_ids, "該当するタグがあったら選択してください", class: 'form-label' %><br>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
