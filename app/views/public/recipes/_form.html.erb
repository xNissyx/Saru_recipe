<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: recipe, local: true) do |f| %>

      <div class="mb-3">
        <%= f.label :image, "料理の写真", class: 'form-label' %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="mb-3">
        <%= f.label :title, "レシピ名", class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: "レシピ名" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "レシピの説明", class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control', placeholder: "レシピの簡単な説明" %>
      </div>

      <div class="mb-3">
        <%= f.label :calorie, "カロリー", class: 'form-label' %>
        <%= f.number_field :calorie, class: 'form-control' %>
      </div>
      
      <% unless controller.action_name == 'edit' %>
      <h4><u>必要な材料</u></h4>
      
      <div class="mb-3" id="ingredients">
        <%= f.fields_for :ingredients do |ingredient| %>
              <%= render 'ingredient_fields', f: ingredient %>
        <% end %>
        <div class="links">
          <%= link_to_add_association '材料の追加', f, :ingredients, class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :tag_ids, "該当するタグがあったら選択してください", class: 'form-label' %><br>
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
      </div>

      <div class="actions text-center mt-4">
        <%= f.submit "Submit", class: "btn btn-secondary btn" %>
      </div>
    <% end %>
  </div>
</div>