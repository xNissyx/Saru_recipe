<table>
  <tr>
    <th></th>
    <th>レシピ名</th>
    <th>レシピの説明</th>
    <th>カロリー</th>
    <th colspan="3"></th>
  </tr>

<% recipes.each do |recipe| %>
  <tr>
    <td><%= image_tag recipe.get_image.variant( resize: "100x100^", gravity: "center", crop: "100x100+0+0" ).processed %></td>
    <td><%= recipe.title %></td>
    <td><%= recipe.description %></td>
    <td><%= recipe.calorie %></td>
    <td><%= link_to 'Show', recipe %></td>
    <% if recipe.user_id == current_user.id %>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: "本当にレシピを削除しますか？" } %></td>
    <% end %>
  </tr>
<% end %>
</table>