<header>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "monkey.png", size: "50x50", class: "align-middle" %>
      <h1 style="font-family: 'Montserrat Subrayada'; display: inline;" class="align-middle">猿レシピ</h1>
    <% end %>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "レシピ作成", new_recipe_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "レシピ一覧", recipes_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to mypage_user_path, class: 'nav-link' do %>
            <i class="fa-regular fa-user mx-1"></i>プロフィール
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
              <i class="fa-solid fa-arrow-right-from-bracket mx-1"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link' do %>
              <i class="fa-solid fa-user mx-1"></i>新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link' do %>
              <i class="fa-solid fa-arrow-right-to-bracket mx-1"></i>ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <section class="search-bar text-right">
    <%= form_with(url: search_recipes_path, method: :get, local: true) do |form| %>
      <%= form.text_field :word, placeholder: "Search for recipes...", class: "search-input" %>
      <%= form.submit "Search", class: "search-button" %>
    <% end %>
  </section>
</header>
