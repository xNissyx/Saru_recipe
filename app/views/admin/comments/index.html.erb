<h1>コメント管理画面</h1>
<%= link_to "ユーザー管理画面はこちら", admin_users_path %><br>
<%= link_to "タグ管理画面はこちら", admin_tags_path, class: "d-block my-2" %>
<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>コメントしたレシピ</th>
        <th>ユーザーネーム</th>
        <th>コメント内容</th>
        <th>投稿日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.recipe.title %></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td>
            <%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "#{comment.content}を削除しますか？"}, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
